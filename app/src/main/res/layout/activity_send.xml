<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".SendActivity">

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tvDeviceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ†” Device ID: "
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvBluetoothStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âšª Bluetooth: No conectado"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvServerList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“¡ Modo: GPS â†’ Bluetooth â†’ ESP32 â†’ Servidores"
                android:textSize="12sp"
                android:textColor="#999999"
                android:lineSpacingExtra="2dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Location Info Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/locationCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerCard">

        <TextView
            android:id="@+id/coords_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="ðŸ” Obteniendo ubicaciÃ³n..."
            android:textSize="13sp"
            android:textColor="#333333"
            android:lineSpacingExtra="2dp"
            android:background="@android:color/white"/>

    </androidx.cardview.widget.CardView>

    <!-- Bluetooth Scan Button -->
    <Button
        android:id="@+id/btnScanBluetooth"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="ðŸ” Buscar y Conectar ESP32"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#2196F3"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locationCard"/>

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/controlButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnScanBluetooth">

        <Button
            android:id="@+id/send_location_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="â–¶ï¸ Iniciar TransmisiÃ³n"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="12dp"
            app:cornerRadius="8dp"/>

        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ”´ Desconectar Bluetooth"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#F44336"
            android:visibility="gone"
            android:layout_marginBottom="12dp"
            app:cornerRadius="8dp"/>

    </LinearLayout>

    <!-- Status Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/controlButtonsLayout">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="ðŸ“¡ Modo: EnvÃ­o a ESP32 via Bluetooth"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@android:color/white"/>

    </androidx.cardview.widget.CardView>

    <!-- Log Controls -->
    <LinearLayout
        android:id="@+id/logControlsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusCard">

        <Button
            android:id="@+id/btnToggleLog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ocultar Log"
            android:textSize="13sp"
            android:backgroundTint="#9E9E9E"
            android:layout_marginEnd="8dp"
            app:cornerRadius="6dp"/>

        <Button
            android:id="@+id/btnClearLog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Limpiar Log"
            android:textSize="13sp"
            android:backgroundTint="#9E9E9E"
            app:cornerRadius="6dp"/>

    </LinearLayout>

    <!-- Log Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/logCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logControlsLayout">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#333333"
                android:fontFamily="monospace"
                android:lineSpacingExtra="2dp"/>

        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>